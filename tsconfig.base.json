{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/cv-portfolio/src/*"],
      "@/i18n/*": ["src/i18n/*"],
      "@/locales/*": ["src/locales/*"],
      "@/components/*": ["src/components/*"],
      "@/context/*": ["src/context/*"],
      "@/app/*": ["src/app/*"],
      "@/styles/*": ["src/styles/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
